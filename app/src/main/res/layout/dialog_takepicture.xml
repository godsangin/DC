<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:text="2019.07.01"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:textColor="#fff"/>
    <LinearLayout
            android:id="@+id/convert_container"
            app:layout_constraintTop_toBottomOf="@+id/date_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_width="350dp" android:layout_height="350dp">
        <TextureView
                android:id="@+id/textureview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
        </TextureView>
        <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:visibility="gone"
        />
    </LinearLayout>


    <ImageView
            android:id="@+id/take_bt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_brightness_1_white_24dp"
    app:layout_constraintBottom_toBottomOf="@id/convert_container"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
            android:id="@+id/flow_after_view"
            app:layout_constraintTop_toBottomOf="@id/convert_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
    android:visibility="gone">

        <Button
                android:id="@+id/retake_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="다시찍기"/>
        <Button
                android:id="@+id/save_bt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="저장"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>