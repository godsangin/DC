<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <include
            android:id="@+id/navigation_view"
            layout="@layout/navigation_view"
            app:layout_constraintTop_toTopOf="parent"
    />
    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            android:clickable="false"
            app:layout_constraintTop_toBottomOf="@+id/bottom_navigation_container"
            app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>
    <LinearLayout
            android:id="@+id/bottom_navigation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/navigation_view">
        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:itemIconTint="@drawable/selector2"
                app:itemTextColor="#000"
                app:labelVisibilityMode="labeled"
                app:itemHorizontalTranslationEnabled="false"
                android:clickable="false"
                app:menu="@menu/menu_bottom"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/mouse_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="@id/bottom_navigation_container">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                <ImageView
                        android:id="@+id/first_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_fingerprint_black_24dp"/>
            </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:id="@+id/second_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_fingerprint_black_24dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:id="@+id/third_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_fingerprint_black_24dp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
            <ImageView
                    android:id="@+id/fourth_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_fingerprint_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/explain_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mouse_view_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="8dp"
            android:background="@color/colorPrimary"
            android:text="현재 나의 위치에 따른 오늘의 날씨정보를 확인할 수 있습니다."/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dark_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#77000000">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>